{
    "$schema": "/etc/xdg/swaync/configschema.json",
    "positionX": "right",
    "positionY": "top",
    "cssPriority": "user",
    "control-center-width": 380,
    "control-center-height": 800,
    "fit-to-screen": false,
    "notification-window-width": 380,
    "notification-icon-size": 40,
    "notification-inline-replies": true,
    "notification-2fa-action": false,
    "timeout": 8,
    "timeout-low": 4,
    "timeout-critical": 0,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "dnd",
        "buttons-grid",
        "volume",
        "backlight",
        "mpris",
        "title",
        "notifications"
    ],
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "Clear"
        },
        "volume": {
            "label": "󰕾",
            "show-per-app": false
        },
        "backlight": {
            "label": "󰃠",
            "min": 5
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "mpris": {
            "image-size": 60,
            "image-radius": 8,
            "autohide": true,
            "blacklist": [
                "playerctld"
            ]
        },
        "notifications": {
            "vexpand": true
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "󰖔",
                    "type": "toggle",
                    "command": "sh -c 'if pgrep wlsunset; then pkill wlsunset; else wlsunset -t 4000 -T 6500; fi'",
                    "update-command": "sh -c 'pgrep wlsunset && echo true || echo false'"
                },
                {
                    "label": "󰄀",
                    "type": "normal",
                    "command": "~/.config/hypr/scripts/screenshot.sh"
                },
                {
                    "label": "󰈊",
                    "type": "normal",
                    "command": "hyprpicker -a"
                },
                {
                    "label": "",
                    "type": "normal",
                    "command": "~/.config/rofi/scripts/powermenu.sh"
                }
            ]
        }
    }
}